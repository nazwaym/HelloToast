<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Header: Tombol Toast (full width, ungu) -->
    <Button
        android:id="@+id/button_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_toast"
        android:backgroundTint="@color/purple_primary"
        android:textColor="#FFFFFF"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <!-- Middle: besar, warna kuning, menempati ruang terbanyak -->
    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/yellow_bg"
        android:gravity="center"
        android:text="@string/count_initial_value"
        android:textSize="160sp"
        android:textColor="#333333" />

    <!-- Bottom bar: container ungu yang memuat dua tombol stack vertical -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:orientation="vertical"
        android:background="@color/purple_primary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- Tombol Count (di atas dalam bar) -->
        <Button
            android:id="@+id/button_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/button_label_count"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#FFFFFF" />

        <!-- Spacer kecil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <!-- Tombol Switch Page (di bawah dalam bar) -->
        <Button
            android:id="@+id/button_switchpage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/button_label_pindah"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
